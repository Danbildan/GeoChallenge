<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#FFF">


    <ImageView
        android:id="@+id/card_bg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/map_image_desc"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_world"
        app:layout_constraintBottom_toTopOf="@+id/langsRadioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mapText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxLines="2"
        android:text="@string/maptext"
        android:textSize="36sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="36sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_bg_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card_bg_image" />

    <Button
        android:id="@+id/lbButton"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leaderboard"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/card_bg_image"
        app:layout_constraintStart_toStartOf="@+id/card_bg_image" />

    <TextView
        android:id="@+id/firstPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/_1"
        app:layout_constraintStart_toStartOf="@+id/card_bg_image"
        app:layout_constraintTop_toTopOf="@+id/card_bg_image" />

    <TextView
        android:id="@+id/firstPlaceUserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="..."
        app:layout_constraintStart_toEndOf="@+id/firstPlace"
        app:layout_constraintTop_toTopOf="@+id/card_bg_image" />

    <TextView
        android:id="@+id/thirdPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondPlace" />

    <TextView
        android:id="@+id/secondPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstPlace" />

    <TextView
        android:id="@+id/thirdPlaceUserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        app:layout_constraintStart_toEndOf="@+id/thirdPlace"
        app:layout_constraintTop_toBottomOf="@+id/secondPlaceUserTextView" />

    <TextView
        android:id="@+id/secondPlaceUserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        app:layout_constraintStart_toEndOf="@+id/secondPlace"
        app:layout_constraintTop_toBottomOf="@+id/firstPlaceUserTextView" />

    <RadioGroup
        android:id="@+id/langsRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/card_bg_image">

        <RadioButton
            android:id="@+id/radio_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/lang_en" />

        <RadioButton
            android:id="@+id/radio_ru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/lang_ru" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>

