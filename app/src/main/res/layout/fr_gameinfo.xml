<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:orientation="horizontal">


    <FrameLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toTopOf="parent">


        <com.example.geochallenge.ui.game.FillProgressLayout
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:fpl_backgroundColor="@color/colorAccent"
            app:fpl_isRounded="false"
            app:fpl_progressColor="@color/colorPrimary"
            app:fpl_progressDirection="left_to_right"
            app:fpl_shouldRestart="false" />


        <TextView
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:id="@+id/cityNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:text="Country, City" />

    </FrameLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/scoreTableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        card_view:cardCornerRadius="4dp">

        <include
            layout="@layout/v_load"
            android:id="@+id/loading_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone" />

        <include
            layout="@layout/v_error"
            android:id="@+id/error_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone" />
        <RelativeLayout
            android:id="@+id/gameInfoCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/cardview_list_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingBottom="4dp"
                android:text="Stats:"
                android:textSize="@dimen/text_caption" />

            <TextView
                android:id="@+id/pointsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview_list_title1"
                android:layout_marginTop="0dp"
                android:paddingBottom="4dp"
                android:textColor="#1F1F1F"
                android:text="0"
                android:textSize="@dimen/text_h4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/pointsText"
                android:layout_toRightOf="@+id/pointsText"
                android:layout_below="@+id/cardview_list_title1"
                android:layout_marginTop="0dp"
                android:paddingBottom="4dp"
                android:paddingStart="4dp"
                android:paddingLeft="4dp"
                tools:text="KM"
                android:textSize="@dimen/text_h6" />


            <TextView
                android:id="@+id/distanceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pointsText"
                android:textColor="#8b8b8b" />

            <TextView
                android:id="@+id/timerTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/distanceTv"
                tools:text="@string/timer_info"
                android:textColor="#8b8b8b" />


            <TextView
                android:id="@+id/levelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timerTv"
                android:textColor="#8b8b8b"
                android:text="Уровень " />

            <TextView
                android:id="@+id/currentLevelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timerTv"
                android:layout_toEndOf="@+id/levelText"
                android:layout_toRightOf="@+id/levelText"
                android:textColor="#8b8b8b"
                tools:text="@string/level_d_text" />

            <TextView
                android:id="@+id/taskCounterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timerTv"
                android:layout_toEndOf="@+id/currentLevelText"
                android:layout_toRightOf="@+id/currentLevelText"
                android:textColor="#8b8b8b"
                tools:text="@string/location_d_text" />


            <Button
                android:id="@+id/nextCityBtn"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/taskCounterText"
                android:text="Next" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>