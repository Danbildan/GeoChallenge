<resources>

    <!-- Base application theme. -->
    <style name="GeoTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorGreen</item>
        <item name="android:textColor">@color/colorRed</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="titleTextColor">@color/colorRed</item>
        <item name="subtitleTextColor">@color/colorAccentLight</item>
    </style>

    <style name="GeoAuth" parent="GeoTheme">
        <item name="itemIconTint">@color/colorRed</item>
        <item name="itemTextColor">@color/colorRed</item>
        <item name="android:background">@color/colorBg</item>
    </style>

    <!--    Input Auth-->
    <style name="GeoAuthTextInputLayout">
        <item name="android:textColorHint">@color/colorRed</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="errorTextColor">@color/colorGreen</item>
        <item name="hintTextColor">@color/colorGreen</item>
    </style>

    <style name="GeoAuthTextInputEditText">
        <item name="android:background">@color/colorBgLight</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:color">@color/colorAccentLight</item>

    </style>

    <!--    Buttons-->
    <style name="GeoButtonsAuth">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:backgroundTint">@color/colorBgLight</item>
    </style>

    <style name="GeoButtonsDialog">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:backgroundTint">@color/colorBg</item>
    </style>

    <!--    Radio-->
    <style name="RadioCustom">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rb_toggle</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <!--    Dialog-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorBg</item>
        <item name="android:textColorPrimary">@color/colorRed</item>
        <item name="android:buttonStyle">@style/GeoButtonsAuth</item>
        <item name="buttonBarNegativeButtonStyle">@style/GeoButtonsDialog</item>
        <item name="buttonBarPositiveButtonStyle">@style/GeoButtonsDialog</item>
        <item name="buttonBarButtonStyle">@style/GeoButtonsDialog</item>
    </style>

    <!--    TextSwitch-->
    <style name="GeoSwitch">
        <item name="android:textColor">@color/colorAccentLight</item>
        <item name="android:gravity">center|top</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:shadowColor">@color/colorBg</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>

